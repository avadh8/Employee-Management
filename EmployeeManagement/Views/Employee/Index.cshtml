@model List<Employee>

<div class="container">
	<div class="row" pt-4 pb-4>
		<div class="col-6">
			<h2 class=" text-primary">Employee list</h2>
		</div>

		<div class="col-6 text-end">
			<a asp-controller="Employee" asp-action="Create" class="btn btn-outline-success"><i class="bi bi-plus-circle"></i> Create New Employee</a>
		</div>
	</div>
</div>

<table class="table  table-hover">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Designation</th>
            <th scope="col">Department</th>
            <th scope="col">Date Of Joining</th>
			<th scope="col">Edit & Delete</th>
        </tr>
    </thead>
    <tbody>

		@foreach (var employee in Model)
		{
			<tr>
				<th scope="row">@employee.Id</th>
				<td>@employee.Name</td>
				<td>@employee.Designation</td>
				<td>@employee.Department</td>
				<td>@employee.DateOfJoining</td>

				<td>
					<div class="w-60 btn btn-group ml-1 ">
						<a asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-outline-success mx-2" style="border:none">
							<i class="bi bi-pencil-square"></i> Edit
						</a>
						<a asp-controller="Employee" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-outline-danger mx-2" style="border:none">
							<i class="bi bi-trash3"></i> Delete
						</a>
					</div>
				</td>
			</tr>
		}

    </tbody>
</table>