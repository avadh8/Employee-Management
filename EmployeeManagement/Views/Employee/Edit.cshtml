@model Employee

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="text-primary"> Create Employee</h2>
			<hr />
		</div>
		@* <div asp-validation-summary="All"></div> *@
		<div class="mb-3 row">
			<label asp-for="Name"></label>
			<input asp-for="Name" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<label asp-for="Designation"></label>
			<input asp-for="Designation" class="form-control" />
			<span asp-validation-for="Designation" class="text-danger"></span>
		</div>
		<div class="mb-3 row">
			<label asp-for="Department"></label>
			<input asp-for="Department" class="form-control" />
			<span asp-validation-for="Department" class="text-danger"></span>
		</div>

		<div class="mb-3 row">
			<label asp-for="DateOfJoining"></label>
			<input asp-for="DateOfJoining" class="form-control" />
			<span asp-validation-for="DateOfJoining" class="text-danger"></span>
		</div>

		<div class="row">
			<div class="col-6 col-md-3">

				<button type="submit" class="btn btn-success form-control">Submit</button>
			</div>
			<div class="col-6 col-md-3">

				<a asp-controller="Employee" asp-action="Index" class="btn btn-secondary form-control">Back to List</a>
			</div>
		</div>
	</div>
</form>
